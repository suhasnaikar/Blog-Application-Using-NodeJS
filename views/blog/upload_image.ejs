<%- include('../partials/header') %>

<body>
<%- include('./blog_partials/navbar.ejs') %>
<section class="contact-us">
<div class="container">
<div class="row">

<div class="col-lg-12">
<div class="down-contact">
<div class="row">
<div class="col-lg-8 offset-lg-2">
<div class="sidebar-item contact-form">
<div class="sidebar-heading">
<h2>Upload Image</h2>
</div>
<!-- For Displaying Validation & Flash Messages -->
<%- messages('./partials/_flash_messages', locals) %>
<!-- End Displaying Validation & Flash Messages -->
<div class="content" style="margin-bottom:110px;">
<form id="contact" action="/blogs/upload_image" method="post" enctype="multipart/form-data">
<div class="row">
<div class="col-md-12 col-sm-12">
<fieldset>
<input name="blog_id" id="blog_id" value="<%= blog_id %>" readonly>
</fieldset>
</div>
<div class="col-md-12 col-sm-12">
<fieldset>
<input type="file" name="image" style="padding:10px;">
</fieldset>
</div>


<div class="col-lg-12" style="margin-top:30px;">
<fieldset>
<button type="submit" id="form-submit" class="main-button btn-block custom-button">Upload Image</button>
</fieldset>
</div>
</div>
</form>
</div>
</div>
</div>
</div>
</div>
</section>
<%- include('../partials/footer') %>                
</body>

</html>